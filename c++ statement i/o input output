#include <iostream>  // Library untuk I/O

using namespace std;

int main() {
    int angka;  // Deklarasi variabel
    
    cout << "Masukkan sebuah angka: ";  // Output ke layar
    cin >> angka;  // Input dari pengguna
    
    cout << "Angka yang Anda masukkan adalah: " << angka << endl;  // Output hasil
    
    return 0;
}
